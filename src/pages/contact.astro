---
import Heading from "@components/Heading.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

interface Social {
  link: string;
  title: string;
  body: string;
  icon: string;
}

const socials: Social[] = [
  {
    link: "https://peerlist.io/nevillebrem",
    title: "Peerlist",
    body: "Connect and see more on Peerlist",
    icon: "fa-solid fa-p",
  },
  {
    link: "https://x.com/BremNeville",
    title: "Twitter",
    body: "I'm on x, btw",
    icon: "fa-brands fa-x-twitter",
  },
  {
    link: "https://github.com/nevthereal",
    title: "GitHub",
    body: "Find my OSS projects on my here.",
    icon: "fa-brands fa-github",
  },
];
---

<BaseLayout title="Contact">
  <Heading title="Contact" subtitle="Get in touch" />

  <div class="my-8 max-w-5xl md:mx-auto mx-8">
    <h2 class="h2 mb-4 font-bold">You can find me here</h2>
    <div class="grid grid-rows-3 gap-4 xl:grid-cols-3 xl:grid-rows-1">
      {
        socials.map((social) => {
          return (
            <a
              href={social.link}
              target="_blank"
              class="bg-base-200 rounded-box flex items-center gap-6 px-6 py-4 border-2 border-base-300 group"
              id="card"
            >
              <i class={`${social.icon} text-2xl`} />
              <div class="my-auto">
                <h3 class="text-3xl font-bold">{social.title}</h3>
                <p class="hidden md:block font-medium">{social.body}</p>
              </div>
            </a>
          );
        })
      }
    </div>
    <p class="text-center font-medium mt-16">
      Or directly reach out to me via email: <a
        class="link"
        href="mailto:contact@nevillebrem.com">contact@nevillebrem.com</a
      >
    </p>
  </div>
</BaseLayout>
