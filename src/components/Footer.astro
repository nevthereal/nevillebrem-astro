  <div class="mt-4 grid grid-cols-2 justify-center text-left">
    <ul>
      <li class="text-base-content/80 font-bold">Useful links</li>
      {
        usefulLinks.map(({ link, name }) => {
          return (
            <li>
              <a class="font-medium" target="_blank" href={link}>
                {name}
              </a>
            </li>
          );
        })
      }
    </ul>
    <ul>
      <li class="text-base-content/80 font-bold">Support me</li>
      {
        supportLinks.map(({ name, link }) => {
          return (
            <li>
              <a class="font-medium" target="_blank" href={link}>
                {name}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
