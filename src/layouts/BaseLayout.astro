---
import Footer from "@components/Footer.astro";
import { Nav } from "@components/Nav";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.png' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <script
      is:inline
      src='https://kit.fontawesome.com/0c1fb969e1.js'
      crossorigin='anonymous'></script>
    <title>Neville Brem - {title}</title>
    <style is:global>
      .bento-box {
        @apply p-8 text-center duration-200 hover:shadow-lg rounded-box bg-base-200;
      }

      .bento-heading {
        @apply mb-4 font-black;
      }
    </style>
  </head>
  <body>
    <Nav client:load />
    <main class='overflow-x-hidden'>
      <slot />
    </main>
    <Footer />
  </body>
</html>
